extends layout

block content
  h1= title
  p Welcome to #{title}
  form(name='uploadForm', action='/files', method='post', enctype='multipart/form-data')
    h2= 'HTTP upload'
    input(type='file', name='myFiles', multiple)
    input(type='submit', value='Send file')

  form#jsUpload
    h2= 'Javascript upload'
    input(type='file', multiple)
    input(type='submit', value='Send file')

  form#chunkUpload
    h2= 'Javascript chunk file (32MB) upload'
    input(type='file')
    input(type='submit', value='Send file')

  script(src='/javascripts/upload.js')
